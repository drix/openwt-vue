{
  "name": "openwt",
  "version": "0.4.1",
  "scripts": {
    "serve": "vue-cli-service serve",
    "test:unit": "vue-cli-service test:unit",
    "test:karma": "karma start --coverage",
    "test:karma:watch": "karma start --single-run=false --auto-watch=true",
    "lint": "vue-cli-service lint",
    "commit": "git add . && git-cz",
    "prepush": "npm run lint",
    "build": "vue-cli-service build",
    "build:docker": "docker build -t  \"adrianospadoni/openwt-vue:rpi.\"$(node -p -e \"require('./package.json').version\") .",
    "build:push": "docker push  \"adrianospadoni/openwt-vue:rpi.\"$(node -p -e \"require('./package.json').version\")",
    "deploy": "npm run build && npm run build:docker && npm run build:push",
    "release:major": "standard-version --release-as major -t \"\" -a --releaseCommitMessageFormat \"chore: ðŸ¤– release {{currentTag}}\"",
    "release:minor": "standard-version --release-as minor -t \"\" -a --releaseCommitMessageFormat \"chore: ðŸ¤– release {{currentTag}}\"",
    "release:patch": "standard-version --release-as patch -t \"\" -a --releaseCommitMessageFormat \"chore: ðŸ¤– release {{currentTag}}\""
  },
  "dependencies": {
    "@okta/okta-vue": "^1.3.0",
    "axios": "^0.19.2",
    "bootstrap": "^4.4.1",
    "bootstrap-vue": "^2.7.0",
    "core-js": "^3.6.4",
    "jquery": "^3.4.1",
    "vue": "^2.6.11",
    "vue-router": "^3.1.5",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.2.0",
    "@vue/cli-plugin-eslint": "~4.2.0",
    "@vue/cli-plugin-router": "^4.2.3",
    "@vue/cli-plugin-unit-jest": "^4.2.3",
    "@vue/cli-plugin-vuex": "^4.2.3",
    "@vue/cli-service": "~4.2.0",
    "@vue/test-utils": "^1.0.0-beta.32",
    "babel-eslint": "^10.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.1.2",
    "standard-version": "^7.1.0",
    "vue-template-compiler": "^2.6.11",
    "vuejs-logger": "^1.5.4"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {},
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
