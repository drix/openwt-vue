{
  "name": "openwt",
  "version": "0.2.0",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "test:karma": "karma start --coverage",
    "test:karma:watch": "karma start --single-run=false --auto-watch=true",
    "commit": "git-cz",
    "prepush": "npm run lint",
    "release:patch": "standard-version --release-as patch -t \"\" -a --releaseCommitMessageFormat \"chore: ðŸ¤– release {{currentTag}}\"",
    "release:minor": "standard-version --release-as minor -t \"\" -a --releaseCommitMessageFormat \"chore: ðŸ¤– release {{currentTag}}\"",
    "release:major": "standard-version --release-as major -t \"\" -a --releaseCommitMessageFormat \"chore: ðŸ¤– release {{currentTag}}\"",
    "docker:build": "docker build -t adrianospadoni/openwt-vue:latest .",
    "docker:push": "docker push adrianospadoni/openwt-vue:latest",
    "deploy:version": "OPENWT_VERSION=$(node -p -e \"require('./package.json').version\")",
    "deploy": "npm run build && npm run deploy:version && npm run docker:build && npm run docker:push"
  },
  "dependencies": {
    "@okta/okta-vue": "^1.3.0",
    "axios": "^0.19.2",
    "bootstrap": "^4.4.1",
    "bootstrap-vue": "^2.7.0",
    "core-js": "^3.6.4",
    "vue": "^2.6.11",
    "vue-router": "^3.1.5",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.2.0",
    "@vue/cli-plugin-eslint": "~4.2.0",
    "@vue/cli-plugin-router": "^4.2.3",
    "@vue/cli-plugin-vuex": "^4.2.3",
    "@vue/cli-service": "~4.2.0",
    "babel-eslint": "^10.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.1.2",
    "standard-version": "^7.1.0",
    "vue-template-compiler": "^2.6.11",
    "vuejs-logger": "^1.5.4"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
